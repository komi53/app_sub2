<div class="container">
	<% if @book.errors.any? %>
  <div id="error_explanation">
    <p>
      <h2><%= @book.errors.count %>error prohibited this book from being saved:
      </h2>
    </p>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
	<div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
 <div class="field row">
    <h4>Title</h4>
    <%= f.text_field :title , class:"col-xs-12" %>
 </div>
 <div class="field row">
    <h4>Opinion</h4>
    <%= f.text_area :body , class:"col-xs-12" %>
</div>
<p></p>
 <div class="actions row">
    <input type="submit" name="commit" value="Update Book" class="btn btn-primary col-xs-12" data-disable-with="Update Book">
 </div>
<% end %>
<p></p>
 	<tr>
		<td><%=link_to 'Show', book_path(@book.id) %></td>
		<span> | </span>
		<td><%=link_to 'Back', books_path %></td>
	</tr>
 </div>

</div>